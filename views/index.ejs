<%- include("./includes/header.ejs")%>
        <nav class="navbar navbar-light bg-light">
                <div class="container-fluid">
                        <a class="navbar-brand" href="/">Todo</a>
                </div>
        </nav>
        <div class="container mt-5">
                <form action="/add/todo" method="post" class="d-flex">
                        <input type="text" name="todo" class="form-control" placeholder="Enter todo">
                        <input type="submit" value="Add To" class="btn btn-md btn-primary mx-2">
                </form>

                <ul class="list-group my-5 ">
                        <% todo.forEach(todos=> { %>
                                <li class="list-group-item">
                                        <%= todos.todo %>
                                </li>
                                <div class="text-start m-2">
                                        <a href="/delete/todo/<%= todos._id %>"
                                                class="btn btn-danger btn-sm">Deleted</a>
                                                <a href="/edit/<%= todos._id %>" class="btn btn-primary btn-sm">Edit</a>  
                                </div>
                                
                        <% }) %>
                </ul>
        </div>
        <%- include("./includes/footer.ejs")%>